<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <AdaptiveBoxLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:weight="1"
        ohos:id="$+id:adaptive_box_layout">

        <Text
            ohos:height="20vp"
            ohos:width="10vp"
            ohos:background_element="#EC9DAA"
            ohos:margin="10vp"
            ohos:text="1"
            ohos:text_size="18fp" />

        <Text
            ohos:height="20vp"
            ohos:width="10vp"
            ohos:background_element="#EC9DAA"
            ohos:margin="10vp"
            ohos:text="2"
            ohos:text_size="18fp" />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="#EC9DAA"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="AdaptiveBoxLayout"
            ohos:text_size="18fp" />

        <Text
            ohos:height="20vp"
            ohos:width="10vp"
            ohos:background_element="#EC9DAA"
            ohos:margin="10vp"
            ohos:text="4"
            ohos:text_size="18fp" />

        <Text
            ohos:height="10vp"
            ohos:width="match_content"
            ohos:background_element="#EC9DAA"
            ohos:margin="10vp"
            ohos:text="Add"
            ohos:text_size="18fp" />


        <Text
            ohos:height="10vp"
            ohos:width="10vp"
            ohos:background_element="#EC9DAA"
            ohos:margin="10vp"
            ohos:text="5"
            ohos:text_size="18fp" />

        <Text
            ohos:height="10vp"
            ohos:width="10vp"
            ohos:background_element="#EC9DAA"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:text="6"
            ohos:text_size="18fp" />
    </AdaptiveBoxLayout>

    <Button
        ohos:id="$+id:add_rule_btn"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="10vp"
        ohos:padding="10vp"
        ohos:background_element="#A9CFF0"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="22fp"
        ohos:text="add rule"/>

    <Button
        ohos:id="$+id:remove_rule_btn"
        ohos:padding="10vp"
        ohos:top_margin="10vp"
        ohos:layout_alignment="horizontal_center"
        ohos:bottom_margin="10vp"
        ohos:background_element="#D5D5D5"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="22fp"
        ohos:text="remove rule"/>

</DirectionalLayout>